<%- include('./partials/header') %>

<% if (!user || user.role !== "owner") { %>
  <div class="min-h-screen flex items-center justify-center text-red-500">
    Access Denied
  </div>
<% return; } %>

<!-- ================= BACKGROUND ================= -->
<div class="fixed inset-0 -z-10
            bg-gradient-to-br
            from-white via-slate-100 to-white
            dark:from-black dark:via-zinc-900 dark:to-black">
</div>

<!-- ================= EDIT PRODUCT ================= -->
<div class="min-h-screen flex items-center justify-center px-4 pt-32 pb-16">

  <div
    class="w-full max-w-xl
           rounded-3xl
           bg-white/25 dark:bg-black/30
           backdrop-blur-3xl
           border border-white/30
           shadow-[0_30px_80px_rgba(0,0,0,0.25)]
           p-8 md:p-10">

    <h2 class="text-2xl font-semibold mb-8">
      Edit Product
    </h2>

    <form
      action="/products/edit/<%= product._id %>"
      method="post"
      class="space-y-4">

      <input
        name="name"
        value="<%= product.name %>"
        class="glass-input"
        placeholder="Product Name" />

      <input
        name="price"
        value="<%= product.price %>"
        class="glass-input"
        placeholder="Price" />

      <input
        name="discount"
        value="<%= product.discount %>"
        class="glass-input"
        placeholder="Discount" />

      <input
        name="bgcolor"
        value="<%= product.bgcolor %>"
        class="glass-input"
        placeholder="Background Color" />

      <input
        name="panelcolor"
        value="<%= product.panelcolor %>"
        class="glass-input"
        placeholder="Panel Color" />

      <input
        name="textcolor"
        value="<%= product.textcolor %>"
        class="glass-input"
        placeholder="Text Color" />

      <div class="flex flex-col sm:flex-row gap-4 pt-6">

        <button
          class="px-6 py-3 rounded-full
                 bg-gradient-to-r from-blue-500 to-blue-400
                 text-white font-medium
                 shadow-[0_15px_40px_rgba(59,130,246,0.45)]
                 hover:opacity-90 transition">
          Update Product
        </button>

        <a
          href="/owners/admin"
          class="px-6 py-3 rounded-full
                 text-center
                 bg-white/40 dark:bg-white/10
                 border border-white/30
                 hover:opacity-80 transition">
          Cancel
        </a>

      </div>
    </form>

  </div>
</div>

<!-- ================= INPUT STYLE ================= -->
<style>
.glass-input {
  width: 100%;
  padding: 0.75rem 1rem;
  border-radius: 0.75rem;
  background: rgba(255,255,255,0.35);
  border: 1px solid rgba(255,255,255,0.4);
  color: #000;
}
.dark .glass-input {
  background: rgba(255,255,255,0.08);
  color: #fff;
}
.glass-input:focus {
  outline: none;
  border-color: #60a5fa;
}
</style>

<%- include('./partials/footer') %>
