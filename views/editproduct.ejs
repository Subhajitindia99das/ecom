<%- include('./partials/header') %>

<% if (!user || user.role !== "owner") { %>
    <h2 class="text-center text-red-600 mt-10">Access Denied</h2>
<% return; } %>

<div class="min-h-screen flex justify-center items-center">
    <div class="w-1/2 bg-white p-8 shadow rounded">
        <h2 class="text-xl font-bold mb-6">Edit Product</h2>

        <form action="/products/edit/<%= product._id %>" method="post">
            <input 
                name="name"
                value="<%= product.name %>"
                class="border p-2 w-full mb-3"
                placeholder="Product Name"
            />

            <input 
                name="price"
                value="<%= product.price %>"
                class="border p-2 w-full mb-3"
                placeholder="Price"
            />

            <input 
                name="discount"
                value="<%= product.discount %>"
                class="border p-2 w-full mb-3"
                placeholder="Discount"
            />

            <input 
                name="bgcolor"
                value="<%= product.bgcolor %>"
                class="border p-2 w-full mb-3"
                placeholder="Background Color"
            />

            <input 
                name="panelcolor"
                value="<%= product.panelcolor %>"
                class="border p-2 w-full mb-3"
                placeholder="Panel Color"
            />

            <input 
                name="textcolor"
                value="<%= product.textcolor %>"
                class="border p-2 w-full mb-3"
                placeholder="Text Color"
            />

            <div class="flex gap-4 mt-4">
                <button class="bg-blue-500 text-white px-4 py-2">
                    Update Product
                </button>

                <a href="/owners/admin" class="text-gray-600 mt-2">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<%- include('./partials/footer') %>
